{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },     
    "rules": {
        "linebreak-style": [ "warn", "unix" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "warn", "never" ],
        "no-process-env": 0,
        "no-unused-vars": "warn",
        "no-console": 0,
        "block-spacing": 1,
        "key-spacing": [1, {"mode": "minimum"}],
        "keyword-spacing": 1,
        "space-infix-ops": 1,
        "comma-spacing": 1,
        "prefer-const": 1,
        "no-var": 1,
        "spaced-comment": "warn",
        "arrow-parens": ["warn", "as-needed"],
        "prefer-arrow-callback": "warn",
        "prefer-template": "warn",
        "no-useless-concat": "warn",
        "comma-dangle": ["warn", "always-multiline"],
        "object-shorthand": ["warn", "always"]
    }
}
